{
  "name": "@loopback/http-server",
  "version": "1.2.6",
  "description": "A wrapper for creating HTTP/HTTPS servers",
  "engines": {
    "node": ">=8.9"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc es2017 --outDir dist",
    "build:resources": "lb-copy-resources",
    "clean": "lb-clean loopback-http-server*.tgz dist package api-docs",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "verify": "npm pack && tar xf loopback-http-server*.tgz && tree package && npm run clean"
  },
  "author": "IBM Corp.",
  "copyright.owner": "IBM Corp.",
  "license": "MIT",
  "dependencies": {
    "p-event": "^4.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^1.6.1",
    "@loopback/core": "^1.7.3",
    "@loopback/testlab": "^1.3.0",
    "@loopback/eslint-config": "^1.0.0",
    "@types/node": "^10.11.2"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strongloop/loopback-next.git"
  }
}
